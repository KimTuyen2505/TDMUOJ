@model TDMUOJ.Models.AdminOverview
<div id="dashboard" class="dashboard-item">
    <div class="flex items-center justify-between mb-4">
        <h2>Tổng quan hệ thống</h2>
    </div>

    <div class="stats-grid">
        <div class="stat-card accounts">
            <span class="stat-title">Tổng số tài khoản</span>
            <span class="stat-value">@Model.accountNumber</span>
            <i class="fas fa-users stat-icon"></i>
        </div>

        <div class="stat-card contests">
            <span class="stat-title">Tổng số cuộc thi</span>
            <span class="stat-value">@Model.contestNumber</span>
            <i class="fas fa-trophy stat-icon"></i>
        </div>

        <div class="stat-card problems">
            <span class="stat-title">Tổng số bài tập</span>
            <span class="stat-value">@Model.problemNumber</span>
            <i class="fas fa-tasks stat-icon"></i>
        </div>

        <div class="stat-card submissions">
            <span class="stat-title">Tổng số bài nộp</span>
            <span class="stat-value">@Model.submissionNumber</span>
            <i class="fas fa-code stat-icon"></i>
        </div>
    </div>
</div>

