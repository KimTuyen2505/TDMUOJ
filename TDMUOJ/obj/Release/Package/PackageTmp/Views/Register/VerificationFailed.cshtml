@{
    ViewBag.Title = "Xác thực thất bại";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - TDMUOJ</title>
    <link rel="stylesheet" href="~/Content/css/Register.css" />
</head>
<body>
    <section>
        <div class="color"></div>
        <div class="color"></div>
        <div class="color"></div>
        <div class="boxx">
            <div class="square" style="--i: 0"></div>
            <div class="square" style="--i: 1"></div>
            <div class="square" style="--i: 2"></div>
            <div class="square" style="--i: 3"></div>
            <div class="square" style="--i: 4"></div>
            <div class="fromm">
                <h2>Xác thực thất bại</h2>
                <p>@ViewBag.Message</p>
                <div class="inputboxx">
                    <a href="@Url.Action("ResendVerification", "Register")" class="btn">Gửi lại email xác thực</a>
                </div>
                <div class="inputboxx">
                    <a href="@Url.Action("Index", "Login")" class="btn">Đến trang đăng nhập</a>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
