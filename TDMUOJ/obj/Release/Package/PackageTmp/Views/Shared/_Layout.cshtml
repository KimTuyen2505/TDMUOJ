<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="TDMUOJ - Nền tảng học tập và luyện thi lập trình thuật toán" />
    <meta name="keywords" content="TDMU, online judge, lập trình, thuật toán, programming, algorithm" />
    <meta name="author" content="TDMU" />

    <title>@ViewBag.Title - TDMUOJ</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/Content/IMAGE/Home/logo-tdmu.png" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Base Styles -->
    <link rel="stylesheet" href="~/Content/css/General.css" />

    <!-- Page-specific styles -->
    @RenderSection("styles", required: false)
</head>

<body>
    <div id="page-container">
        <!-- Header -->
        <header id="site-header">
            @Html.Action("HeaderPartial", "Layout")
        </header>

        <!-- Main Content -->
        <main id="main-content">
            <div class="container">
                @RenderBody()
            </div>
        </main>

        <!-- Footer -->
        <footer id="site-footer">
            @Html.Action("FooterPartial", "Layout")
        </footer>
    </div>

</body>
</html>