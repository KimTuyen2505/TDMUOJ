
@model List<TDMUOJ.Models.Account>

<div id="accounts" class="dashboard-item hidden">
    <h2>Quản lý tài khoản</h2>
    <table>
        <tr>
            <th>STT</th>
            <th>Tên đăng nhập</th>
            <th>Email</th>
            <th>Vai trò</th>
            <th>Thao tác</th>
        </tr>
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i+1)</td>
                <td>@Model[i].username</td>
                <td>@Model[i].email</td>
                <td>@Model[i].role</td>
                <td><a href="@Url.Action("Index", "Profile", new {id = Model[i].id })">Chi tiết</a> | <a href="#">Sửa</a></td>
            </tr>
        }
    </table>
</div>