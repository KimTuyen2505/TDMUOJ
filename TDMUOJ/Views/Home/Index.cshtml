@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/Content/css/Home.css" />

<!-- Hero Section with Slideshow -->
<section class="hero-section">
    <div class="slideshow-container">
        <div class="slideshow">
            <div class="slide"
                 style="background-image: url(@Url.Content("~/Content/IMAGE/Slide1.jpg"))"></div>
            <div class="slide"
                 style="background-image: url(@Url.Content("~/Content/IMAGE/Slide2.jpg"))"></div>
            <div class="slide"
                 style="background-image: url(@Url.Content("~/Content/IMAGE/Slide3.jpg"))"></div>
            <div class="slide"
                 style="background-image: url(@Url.Content("~/Content/IMAGE/Slide4.jpg"))"></div>
            <div class="slide"
                 style="background-image: url(@Url.Content("~/Content/IMAGE/Slide5.jpg"))"></div>
            <div class="slide"
                 style="background-image: url(@Url.Content("~/Content/IMAGE/Slide6.jpg"))"></div>
        </div>

        <div class="slideshow-controls">
            <button class="control-btn prev" onclick="plusSlides(-1)">
                <span class="arrow">&#10094;</span>
            </button>
            <div class="slide-indicators">
                <span class="indicator" onclick="currentSlide(1)"></span>
                <span class="indicator" onclick="currentSlide(2)"></span>
                <span class="indicator" onclick="currentSlide(3)"></span>
                <span class="indicator" onclick="currentSlide(4)"></span>
                <span class="indicator" onclick="currentSlide(5)"></span>
                <span class="indicator" onclick="currentSlide(6)"></span>
            </div>
            <button class="control-btn next" onclick="plusSlides(1)">
                <span class="arrow">&#10095;</span>
            </button>
        </div>

        <div class="hero-overlay">
            <div class="container">
                <h1 class="hero-title">TDMU Online Judge</h1>
                <p class="hero-subtitle">Nền tảng học tập và luyện thi lập trình thuật toán</p>
            </div>
        </div>
    </div>
</section>

