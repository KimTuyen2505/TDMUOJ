@model dynamic
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/Content/css/Submit.css" />
<h1>Nộp bài <span><a href="@Url.Action("DetailProblem", "Problems", new {id = Model.id})">@Model.title</a></span> </h1>
<br />
<hr />
<br />
<div class="submit"
     style="
              padding: 10px;
              background-color: #e8e8e8;
              border: 1px solid #7a7a7a;
              border-radius: 5px;
            ">
    <form action="~/Submit/Index" method="post">
        <input hidden name="problemId" value="@Model.id" />
        <div style="display: flex">
            <p><i>Dán bài làm của bạn ở đây hoặc nhập từ file:&nbsp;</i></p>
            <input type="file" />
        </div>
        <br />
        <textarea name="code"
                  id=""
                  style="width: 100%; height: 300px"></textarea>
        <hr style="margin-top: 5px; margin-bottom: 5px" />
        <select name="language" id="lang" style="width: 100%; height: 30px">
            <option value="50">C</option>
            <option value="54">C++</option>
            <option value="51">C#</option>
            <option value="71">Python</option>
            <option value="62">Java</option>
            <option value="63">JavaScript</option>
        </select>
        <hr style="margin-top: 5px; margin-bottom: 5px" />
        <div align="right">
            <button type="submit" class="but"> Nộp bài </button>
        </div>
    </form>
</div>