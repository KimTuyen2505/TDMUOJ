
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Access Denied Page Styles */
    .access-denied-container {
        max-width: 600px;
        margin: 80px auto;
        padding: 0;
    }

    .access-denied-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .access-denied-header {
        background-color: #dc3545;
        color: white;
        padding: 15px 20px;
        font-weight: bold;
        font-size: 1.2rem;
    }

    .access-denied-body {
        padding: 30px;
        background-color: #fff;
    }

    .access-denied-icon {
        font-size: 80px;
        color: #dc3545;
        margin-bottom: 20px;
    }

    .access-denied-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 15px;
        color: #333;
    }

    .access-denied-message {
        font-size: 1rem;
        color: #555;
        margin-bottom: 25px;
        line-height: 1.5;
    }

    .access-denied-button {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s;
        text-decoration: none;
        display: inline-block;
    }

        .access-denied-button:hover {
            background-color: #0069d9;
            text-decoration: none;
            color: white;
        }

        .access-denied-button i {
            margin-right: 8px;
        }
</style>

<div class="access-denied-container">
    <div class="access-denied-card">
        <div class="access-denied-header">
            <h4 class="mb-0">Không có quyền truy cập</h4>
        </div>
        <div class="access-denied-body text-center">
            <div class="access-denied-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h5 class="access-denied-title">Bạn không có quyền truy cập trang này</h5>
            <p class="access-denied-message">
                Trang này chỉ dành cho người dùng có quyền Admin. Vui lòng liên hệ với quản trị viên nếu bạn cần truy cập.
            </p>
            <div class="mt-4">
                <a href="@Url.Action("Index", "Home")" class="access-denied-button">
                    <i class="fas fa-home"></i> Quay về trang chủ
                </a>
            </div>
        </div>
    </div>
</div>

