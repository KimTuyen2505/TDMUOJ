@{
    ViewBag.Title = "Xác thực OTP";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - TDMUOJ</title>
    <link rel="stylesheet" href="~/Content/css/Login.css" />
    <style>
        .otp-input {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-bottom: 20px;
        }

            .otp-input input {
                width: 40px;
                height: 40px;
                text-align: center;
                font-size: 18px;
                border-radius: 5px;
                border: 1px solid #ccc;
            }
    </style>
</head>
<body>
    <section>
        <div class="color"></div>
        <div class="color"></div>
        <div class="color"></div>
        <div class="boxx">
            <div class="square" style="--i: 0"></div>
            <div class="square" style="--i: 1"></div>
            <div class="square" style="--i: 2"></div>
            <div class="square" style="--i: 3"></div>
            <div class="square" style="--i: 4"></div>
            <div class="ctn">
                <div class="fromm">
                    <h2>Xác thực OTP</h2>
                    <p>Chúng tôi đã gửi mã OTP đến email: @ViewBag.Email</p>
                    <div style="color: red;">@ViewBag.Error</div>
                    <form action="@Url.Action("VerifyOTP", "ForgotPassword")" method="post">
                        <input type="hidden" name="email" value="@ViewBag.Email" />
                        <div class="inputboxx">
                            <input type="text" name="otp" placeholder="Nhập mã OTP" required maxlength="6" />
                        </div>
                        <div class="inputboxx">
                            <input type="submit" value="Xác thực" />
                        </div>
                        <p class="forget">
                            <a href="@Url.Action("Index", "ForgotPassword")">Gửi lại mã OTP</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
