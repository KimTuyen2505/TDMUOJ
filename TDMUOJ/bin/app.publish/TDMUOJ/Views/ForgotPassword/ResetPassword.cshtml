@{
    ViewBag.Title = "Đặt lại mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - TDMUOJ</title>
    <link rel="stylesheet" href="~/Content/css/Login.css" />
</head>
<body>
    <section>
        <div class="color"></div>
        <div class="color"></div>
        <div class="color"></div>
        <div class="boxx">
            <div class="square" style="--i: 0"></div>
            <div class="square" style="--i: 1"></div>
            <div class="square" style="--i: 2"></div>
            <div class="square" style="--i: 3"></div>
            <div class="square" style="--i: 4"></div>
            <div class="ctn">
                <div class="fromm">
                    <h2>Đặt lại mật khẩu</h2>
                    <div style="color: red;">@ViewBag.Error</div>
                    <form action="@Url.Action("ResetPassword", "ForgotPassword")" method="post">
                        <input type="hidden" name="email" value="@ViewBag.Email" />
                        <input type="hidden" name="token" value="@ViewBag.Token" />
                        <div class="inputboxx">
                            <input type="password" name="newPassword" placeholder="Mật khẩu mới" required />
                        </div>
                        <div class="inputboxx">
                            <input type="password" name="confirmPassword" placeholder="Xác nhận mật khẩu mới" required />
                        </div>
                        <div class="inputboxx">
                            <input type="submit" value="Đặt lại mật khẩu" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
